extends layout

block content
	.jumbotron(style='background: url(img/contact.jpg); background-position: center; background-repeat: no-repeat; background-size: cover;')
		.container
			h1(style='color: #FFFFFF')= title

	.container
		p#simple-first.
			We're here if you need us. Before reaching out, please consider viewing
			the #[a(href='/about') about page] first. Otherwise, feel free to contact
			the Program Coordinator
		- n = 0
		while n < contacts.length
			ul.no-style
				li #{contacts[n]['name'] + ' | ' + contacts[n]['title']}
				li: a(href='mailto:' + contacts[n]['email']) #{contacts[n]['email']}
				- n++
