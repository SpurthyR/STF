                      .col-md-4
                        input#stu-email.form-control.input-md(name='stu-email', type='email', placeholder='xyz@uw.edu', value="#{proposal.StudentEmail}")
                        span.help-block help
                    // Text input
                    .form-group
                      label.col-md-4.control-label(for='stu-phone') Phone
                      .col-md-4
                        input#stu-phone.form-control.input-md(name='stu-phone', type='text', placeholder='999-999-9999', value="#{proposal.StudentPhone}")
                        span.help-block help
                    // Text input
                    .form-group
                      label.col-md-4.control-label(for='stu-mail') Mail
                      .col-md-4
                        input#stu-mail.form-control.input-md(name='stu-mail', type='text', placeholder='abc', value="#{proposal.StudentMail}")
                        span.help-block help
                    // Button (Three)
                    .form-group
                      label.col-md-4.control-label(for='saveAndContinue')
                      br
                      .col-md-4
                      .col-md-4
                        button.next-button#activate-step-1.btn.btn-default.form-button(name='back') Back
                        button#activate-step-3.btn.btn-default.form-button(name='saveAndContinue' type='submit') Save and Continue
                        //button.next-button#activate-step-3.btn.btn-default.form-button(name='next') Next
        #step-3.row.setup-content
          .form-horizontal(data-toggle='formcache', name='description')
            .col-xs-12
              .col-md-12.well
                .form-horizontal
                  fieldset
                    // Form Name
                    legend
                    // Textarea
                    .form-group
                      label.col-md-4.control-label(for='abstract') Abstract
                      .col-md-4
                        textarea#abstract.form-control(name='abstract', placeholder="800 words...") #{proposal.Abstract}
                    // Textarea
                    .form-group
                      label.col-md-4.control-label(for='background') Background
                      .col-md-4
                        textarea#background.form-control(name='background', placeholder="background") #{proposal.Background}
                    // Textarea
                    .form-group
                      label.col-md-4.control-label(for='CategoryJustification') Justification
                      a(href='#')  edit category
                      .col-md-4
                        textarea#category.form-control(name='CategoryJustification', placeholder="justification...") #{proposal.CategoryJustification}
                    .form-group
                      label.col-md-4.control-label(for='Benefits') Benefits to Students and University
                      .col-md-4
                        textarea#abstract.form-control(name='Benefits', placeholder="800 words") #{proposal.Benefits}
                    // Textarea
                    .form-group
                      label.col-md-4.control-label(for='AccessRestrictions') Access Restrictions (if any)
                      .col-md-4
                        textarea#background.form-control(name='AccessRestrictions') #{proposal.AccessRestrictions}
                    .form-group
                      label.col-md-4.control-label(for='Hours') Hours of Availability
                      .col-md-2
                        input#textinputHours.form-control.input-md(name='Hours', type='text', placeholder='1,2,3...', value="#{proposal.Hours}")
                        span.help-block help
                    .form-group
                      label.col-md-4.control-label(for='Days') Days of Availability
                      .col-md-2
                        input#textinputDays.form-control.input-md(name='Days', type='text', placeholder='S,M,Tu...', value="#{proposal.Days}")
                        span.help-block help
                    .form-group
                      label.col-md-4.control-label(for='DepartmentalResources') Resources Provided by Department
                      .col-md-4
                        textarea#resources.form-control(name='DepartmentalResources') #{proposal.DepartmentalResources}
                    .form-group
                      label.col-md-4.control-label(for='InstallationTimeline') Installation Timeline
                      .col-md-4
                        textarea#timeline.form-control(name='InstallationTimeline') #{proposal.InstallationTimeline}
                    // Button (Double)
                    .form-group
                      label.col-md-4.control-label(for='saveAndContinue')
                      br
                      .col-md-4
                      .col-md-4
                        button.next-button#activate-step-2.btn.btn-default.form-button(name='back') Back
                        button#activate-step-4.btn.btn-default.form-button(name='saveAndContinue' type='submit') Save and Continue
                        //button.next-button#activate-step-4.btn.btn-default.form-button(name='next') Next
                      .col-md-4
    div
