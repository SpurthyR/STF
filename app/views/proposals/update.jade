extends ../layout

block content
  .container
    h2 New Proposal
    .row.form-group
      .col-xs-12
        ul.nav.nav-pills.nav-justified.thumbnail.setup-panel.form-ul
          li.active
            a(href='#step-1')
              h4.list-group-item-heading Introduction
              p.list-group-item-text First step description
          li.disabled
            a(href='#step-2')
              h4.list-group-item-heading Contact
              p.list-group-item-text Second step description
          li.disabled
            a(href='#step-3')
              h4.list-group-item-heading Description
              p.list-group-item-text Third step description
          li.disabled
            a(href='#step-4')
              h4.list-group-item-heading Item
              p.list-group-item-text Fourth step description
          li.disabled
            a(href='#step-5')
              h4.list-group-item-heading Signature Page
              p.list-group-item-text Final step description
    div
      form.form-horizontal#updateProposal(data-toggle='formcache', name='proposalForm',
        method='post', action='/proposals/#{proposal.id}')
        #step-1.setup-content
          .col-xs-12
            .col-md-12.well
              h3 #{proposal.id}
              //Introduction Form
              .form-horizontal(data-toggle='formcache', name='proposalForm')
                fieldset
                  // Form Name
                  legend
                  // Text input
                  .form-group
                    label.col-md-4.control-label(for='title') Title

                    .col-md-5
                      input#title.form-control.input-md(name='title', type='text', placeholder='title', value="#{proposal.ProposalTitle}")

                      span.help-block Title for your proposal
                  // Select Basic
                  .form-group
                    label.col-md-4.control-label(for='category') Category
                    .col-md-4
                      select#category.form-control(name='category')
                        if proposal.Category==='optionOneValue'
                          option(value='optionOneValue', selected='selected') Option one
                        else
                          option(value='optionOneValue') Option one
                        if proposal.Category==='optionTwoValue'
                          option(value='optionTwoValue', selected='selected') Option two
                        else
                          option(value='optionTwoValue') Option two
                  // Select Basic
                  .form-group
                    label.col-md-4.control-label(for='department') Department

                    .col-md-4
                      select#department.form-control(name='department')
                        if proposal.Department==='optionOneValue'
                          option(value='optionOneValue', selected='selected') Option one
                        else
                          option(value='optionOneValue') Option one
                        if proposal.Department==='optionTwoValue'
                          option(value='optionTwoValue', selected='selected') Option two
                        else
                          option(value='optionTwoValue') Option two
                  // Button (Double)
                  .form-group
                    label.col-md-4.control-label(for='saveAndContinue')

                    br

                    .col-md-4

                    .col-md-4
                      button#activate-step-2.btn.btn-primary.form-button(type='submit', name='saveAndContinue') Save and Continue
                      //button.next-button#activate-step-2.btn.btn-default.form-button(name='next') Next
          // <button id="activate-step-2" class="btn btn-primary btn-lg">Activate Step
        #step-2.row.setup-content
          .col-xs-12
            .col-md-12.well
              .form-horizontal(data-toggle='formcache', name='contactForm')
